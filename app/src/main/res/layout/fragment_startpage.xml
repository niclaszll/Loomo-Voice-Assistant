<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/additionalInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Additional Information:"
        android:textColor="#003C5A"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/additionalInfo"
        app:layout_constraintStart_toStartOf="@+id/additionalInfo" />

    <TextView
        android:id="@+id/additionalInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back"
        android:padding="12dp"
        android:text=""
        android:textColor="#003C5A"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/loomoResponseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Loomo:"
        android:textColor="#003C5A"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/loomoResponse"
        app:layout_constraintStart_toStartOf="@+id/loomoResponse" />

    <TextView
        android:id="@+id/loomoResponse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/back"
        android:padding="12dp"
        android:text="@string/getting_ready"
        android:textColor="#003C5A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionalInfo"
        app:layout_constraintWidth_percent="1" />

    <Button
        android:id="@+id/button_manual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_bg_green"
        android:text="@string/manual_voice_input"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/additionalInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/additionalInfo"
        app:layout_constraintTop_toTopOf="@+id/additionalInfo"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/isOnlineView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="-"
        android:textColor="#003C5A"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loomoResponse"
        app:layout_constraintStart_toStartOf="@+id/button_manual"
        app:layout_constraintTop_toBottomOf="@+id/button_manual" />

    <TextView
        android:id="@+id/onlineServicesInitializedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="-"
        android:textColor="#003C5A"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loomoResponse"
        app:layout_constraintEnd_toEndOf="@+id/button_manual"
        app:layout_constraintStart_toEndOf="@+id/isOnlineView"
        app:layout_constraintTop_toBottomOf="@+id/button_manual" />


</androidx.constraintlayout.widget.ConstraintLayout>